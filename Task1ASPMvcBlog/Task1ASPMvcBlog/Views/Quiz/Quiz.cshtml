@{
    ViewBag.Title = "Quiz";
}

@using (Html.BeginForm("Quiz", "Quiz", FormMethod.Post))
{
    <div class="form-group">
        <label for="dishName">Название блюда</label>
        @Html.TextBox("dishName", ViewBag.DishName as string)
    </div>

    <div class="form-group">
        <label for="dishType">Тип блюда:</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="dishTypeRadioOptions" id="dishTypeInlineRadio1" value="option1" checked/>
            <label class="form-check-label" for="dishTypeInlineRadio1">
                Мясное
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="dishTypeRadioOptions" id="dishTypeInlineRadio1" value="option1"/>
            <label class="form-check-label" for="dishTypeInlineRadio1">
                Вегатерианское
            </label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="dishTypeRadioOptions" id="dishTypeInlineRadio1" value="option1"/>
            <label class="form-check-label" for="dishTypeInlineRadio1">
                Веганское
            </label>
        </div>
    </div>

    <div class="form-group">
        <label>Ингридиенты:</label>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
                Кукуруза
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
                Оливки
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
                Майонез
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
                Картошка
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
                Перец
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}